<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/row_checkout_padding"
    android:id="@+id/favContent">



    <ImageView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:id="@+id/ivFavoriteIcon"
        android:layout_weight="2"
        android:layout_marginRight="@dimen/row_checkout_margin"
        android:src="@drawable/torres_10_700ml"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/row_checkout_margin"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tvFavoriteName"
            android:gravity="left"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tvFavoritePrice"
            android:gravity="left"/>
    </LinearLayout>


</LinearLayout>
