<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_margin="@dimen/beverage_menu_margin"
    android:background="@color/bright_foreground_material_dark"
    android:id="@+id/beverageMenuContent"
    >




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivBeverageMenu"
        android:src="@drawable/torres_header"
        android:layout_above="@+id/tvItemDrinkPrice"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$315.00"
        android:id="@+id/tvBeverageMenu"
        android:gravity="center_horizontal"
        android:background="@color/background_material_dark"
        android:textColor="@color/abc_primary_text_material_dark"
        android:padding="@dimen/abc_control_padding_material"
        android:textStyle="bold"


        android:layout_alignParentBottom="true"/>

</RelativeLayout>

